<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_in_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/ibtn_funtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_function" />

    <TextView
        android:id="@+id/tv_content_in_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ibtn_funtion"
        android:layout_below="@id/tv_title_in_card"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ibtn_funtion"
        android:layout_below="@id/tv_title_in_card"
        android:padding="20dp" />
</RelativeLayout>